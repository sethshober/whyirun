extends layout

block content
    .container-fluid
        .row   
            .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
                form.form-signin(action='/signup', method='post', id='login', style='margin-top: 2em')
                    h2.form-signin-heading Please sign in
                    label.sr-only(for='email') Name
                    input#inputName.form-control(type='text', placeholder='Name', required='', autofocus='', name='name', style='margin-bottom: 0.5em')
                    label.sr-only(for='password') Email Address
                    input#inputEmail.form-control(type='email', placeholder='Email address', required='', name='email')
                    label.sr-only(for='password') Password
                    input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
                    .checkbox
                      label
                        input(type='checkbox', value='remember-me')
                        |  Remember me
                    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
